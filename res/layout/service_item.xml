<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingTop="10dip" 
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/headerlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/main_gv_iv"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dip"
            android:contentDescription="@string/desc"
            android:scaleType="fitXY"
            android:src="@drawable/contact_default_header" />

        <TextView
            android:id="@+id/main_gv_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/gray_black"
            android:textSize="@dimen/forteen"/>
    </LinearLayout>

    <TextView
        android:id="@+id/message_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-17dp"
        android:layout_toRightOf="@id/headerlayout"
        android:background="@drawable/message_count_bg"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:visibility="gone"
        android:text="" />

</RelativeLayout>
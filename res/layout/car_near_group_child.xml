<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp" >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/car_near_friends_list_item_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:placeholderImage="@color/gray"
            app:placeholderImageScaleType="centerCrop"
            app:roundedCornerRadius="3dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/car_near_friends_list_item_head" >

            <TextView
                android:id="@+id/car_near_friends_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aure"
                android:textColor="#111111"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/car_near_friends_list_item_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/car_trands_pen_border"
                android:drawableLeft="@drawable/car_msg_img"
                android:drawablePadding="5dp"
                android:gravity="right"
                android:text="20"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/car_near_friends_list_item_dis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_near_friends_list_item_sex"
                android:layout_marginTop="10dp"
                android:text="卖得了萌，耍的了宝，装的了嫩。"
                android:textColor="#cfcfcf"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

    <!-- <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee" /> -->

</LinearLayout>
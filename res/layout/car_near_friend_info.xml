<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:background="@color/gary_ava"
                        android:scaleType="centerCrop"
                        android:src="@drawable/car_img" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/play_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/car_play_img"
                            android:gravity="right|center_vertical"
                            android:paddingRight="10dp"
                            android:text="34"
                            android:textColor="#666666"
                            android:textSize="12sp" />

                        <ScrollView
                            android:id="@+id/scrollview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="5dp" >

                                <com.facebook.drawee.view.SimpleDraweeView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_margin="5dp"
                                    app:placeholderImage="@color/gray"
                                    app:placeholderImageScaleType="centerCrop"
                                    app:roundedCornerRadius="3dp" />

                                <com.facebook.drawee.view.SimpleDraweeView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_margin="5dp"
                                    app:placeholderImage="@color/gray"
                                    app:placeholderImageScaleType="centerCrop"
                                    app:roundedCornerRadius="3dp" />

                                <com.facebook.drawee.view.SimpleDraweeView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_margin="5dp"
                                    app:placeholderImage="@color/gray"
                                    app:placeholderImageScaleType="centerCrop"
                                    app:roundedCornerRadius="3dp" />

                                <com.facebook.drawee.view.SimpleDraweeView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_margin="5dp"
                                    app:placeholderImage="@color/gray"
                                    app:placeholderImageScaleType="centerCrop"
                                    app:roundedCornerRadius="3dp" />

                                <!--
                                     <com.facebook.drawee.view.SimpleDraweeView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_margin="5dp"
                                    app:placeholderImage="@color/gray"
                                    app:placeholderImageScaleType="centerCrop"
                                    app:roundedCornerRadius="3dp" />
                                -->


                                <!--
                                     <com.facebook.drawee.view.SimpleDraweeView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_margin="5dp"
                                    app:placeholderImage="@color/gray"
                                    app:placeholderImageScaleType="centerCrop"
                                    app:roundedCornerRadius="3dp" />
                                -->
                            </LinearLayout>
                        </ScrollView>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp" >

                    <TextView
                        android:id="@+id/friend_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/car_sex_female"
                        android:gravity="right|center_vertical"
                        android:paddingRight="2dp"
                        android:text="20"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/friend_sex"
                        android:text="天秤座"
                        android:textColor="#999999" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:text="3.2km"
                        android:textColor="#999999" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/car_menu_border"
                    android:orientation="horizontal"
                    android:padding="15dp" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal" >

                        <TextView
                            android:id="@+id/trands"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="她的动态"
                            android:textColor="#999999"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/trands_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/trands"
                            android:layout_centerHorizontal="true"
                            android:text="18"
                            android:textColor="#dbdbdb"
                            android:textSize="28sp" />
                    </RelativeLayout>

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        app:placeholderImage="@color/gray"
                        app:placeholderImageScaleType="centerCrop"
                        app:roundedCornerRadius="3dp" />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        app:placeholderImage="@color/gray"
                        app:placeholderImageScaleType="centerCrop"
                        app:roundedCornerRadius="3dp" />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        app:placeholderImage="@color/gray"
                        app:placeholderImageScaleType="centerCrop"
                        app:roundedCornerRadius="3dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/car_menu_point" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/car_grouplist_item_divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/car_menu_border"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center_horizontal" >

                        <TextView
                            android:id="@+id/cars"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="她的爱车"
                            android:textColor="#999999"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/cars_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/cars"
                            android:layout_centerHorizontal="true"
                            android:text="2"
                            android:textColor="#dbdbdb"
                            android:textSize="28sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <include layout="@layout/car_cars_list_item" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#eeeeee" />

                        <include layout="@layout/car_cars_list_item" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/car_menu_point" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/car_grouplist_item_divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/car_menu_border"
                    android:orientation="horizontal"
                    android:padding="15dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个性签名"
                        android:textColor="#999999"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="人生悲欢离合，酸甜苦辣，皆系于心，心态若安好，就没有过不去的坎。经营好心情，你就拥有了生活的全部。"
                        android:textColor="#414141" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/car_menu_border"
                    android:orientation="horizontal"
                    android:padding="15dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="情感状态"
                        android:textColor="#999999"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="保密"
                        android:textColor="#414141" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/car_grouplist_item_divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/car_menu_border"
                    android:orientation="horizontal"
                    android:padding="15dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="职业        "
                        android:textColor="#999999"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="汽车销售"
                        android:textColor="#414141" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/car_menu_border"
                    android:orientation="horizontal"
                    android:padding="15dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="公司        "
                        android:textColor="#999999"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="浙江优瑞汽车有限公司"
                        android:textColor="#414141" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/car_menu_border"
                    android:orientation="horizontal"
                    android:padding="15dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所在地    "
                        android:textColor="#999999"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="浙江杭州"
                        android:textColor="#414141" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/car_grouplist_item_divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/car_menu_border"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center_horizontal" >

                        <TextView
                            android:id="@+id/groups"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="加入群组"
                            android:textColor="#999999"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/groups_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/groups"
                            android:layout_centerHorizontal="true"
                            android:text="2"
                            android:textColor="#dbdbdb"
                            android:textSize="28sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <include layout="@layout/car_groups_item" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#eeeeee" />

                        <include layout="@layout/car_groups_item" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/car_menu_point" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/car_grouplist_item_divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/car_menu_border"
                    android:orientation="horizontal"
                    android:padding="15dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="注册日期"
                        android:textColor="#999999"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="2015-08-08"
                        android:textColor="#414141" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/car_grouplist_item_divider" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#514982"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/conversation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onClick" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/car_conversation_img"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:text="对话"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <View
                android:id="@+id/line_view"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:alpha="0.5"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/attention"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onClick" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/car_addfriend_img"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:text="关注"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="onClick"
        android:padding="15dp"
        android:text="返回"
        android:textColor="#655b8b"
        android:textSize="13sp" />

    <Button
        android:id="@+id/setting_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:onClick="onClick"
        android:padding="15dp"
        android:text="设置"
        android:textColor="#655b8b"
        android:textSize="13sp"
        android:visibility="gone" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#514982"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:padding="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/car_search_img" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="搜索群组名称或号码"
            android:textColor="#9995b4"
            android:textColorHint="#9995b4"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- <include layout="@layout/wk_list_view_for_include" /> -->

    <ExpandableListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="1dp"
        android:childDivider="#eeeeee"
        android:gravity="center"
        android:scrollbars="none" />

</LinearLayout>
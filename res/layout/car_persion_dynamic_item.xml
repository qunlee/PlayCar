<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:paddingTop="5dip"
        android:paddingBottom="10dip">

        <com.playcar.view.roundedimageview.RoundedImageView
            android:id="@+id/imageView1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dip"
            android:scaleType="center"
            android:src="@drawable/car"
            app:riv_border_color="@color/color_cccccc"
            app:riv_border_width="3dip"
            app:riv_corner_radius="5dip"
            app:riv_oval="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dip" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/txt_14size_singline_nomal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="angle萍儿"
                        android:textColor="@color/color_333333" />

                    <TextView
                        style="@style/txt_12size_nomal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="1分钟前"
                        android:textColor="@color/color_999999" />
                </RelativeLayout>

                <TextView
                    style="@style/txt_12size_nomal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/man"
                    android:gravity="center_vertical|right"
                    android:paddingRight="5dip"
                    android:text="24"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/color_cccccc" />

            <TextView
                style="@style/txt_12size_nomal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:gravity="center_vertical|right"
                android:paddingRight="5dip"
                android:text="迈凯轮650s"
                android:textColor="@color/color_333333" />

            <com.playcar.view.MyGridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:columnWidth="60dip"
                android:horizontalSpacing="5dip"
                android:numColumns="auto_fit"
                android:stretchMode="spacingWidth"
                android:verticalSpacing="5dip" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_content"
                    android:layout_toLeftOf="@+id/txt_comment"
                    style="@style/txt_12size_nomal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:paddingRight="5dip"
                    android:text="12.5km \t\t 2赞  \t\t 5评论"
                    android:textColor="@color/color_999999" />
				
                <TextView
                    android:id="@+id/txt_comment"
                    style="@style/txt_12size_nomal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@drawable/comment"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="10dip"
                    android:textColor="@color/color_999999" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_groundback"
    android:orientation="vertical" >

    <com.playcar.view.HeadView
        android:id="@+id/headView"
        style="@style/head_view" />

    <com.playcar.view.SlidingMenu
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <com.playcar.view.carlist.CarTypeView
                android:id="@+id/car_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.playcar.view.carlist.CarBrandView
                android:id="@+id/car_brand"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </com.playcar.view.SlidingMenu>

</LinearLayout>
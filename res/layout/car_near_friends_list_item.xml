<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="15dp">

    <ImageView
        android:id="@+id/car_near_friends_list_item_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:src="@drawable/car_head_update_icon" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/car_near_friends_list_item_head"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/car_near_friends_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aure"
            android:textColor="@color/grey_666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/car_near_friends_list_item_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_near_friends_list_item_name"
            android:layout_marginTop="5dp"
            android:background="@drawable/car_sex_girl_bg"
            android:gravity="right"
            android:paddingRight="2dp"
            android:text="20"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/car_near_friends_list_item_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="0.1km | 1分钟前"
            android:textColor="@color/grey_666666"
            android:layout_below="@id/car_near_friends_list_item_sex"
            android:textSize="12sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/car_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/car_head_update_icon"
        android:gravity="center"
        android:text="宝马" />

</RelativeLayout>
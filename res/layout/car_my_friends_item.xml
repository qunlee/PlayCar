<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip" >

        <com.playcar.view.roundedimageview.RoundedImageView
            android:id="@+id/imageView1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/car"
            app:riv_border_color="@color/color_cccccc"
            app:riv_corner_radius="5dip"
            app:riv_oval="false" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/img_car_tag"
                android:orientation="vertical"
                android:paddingRight="5dip" >

                <TextView
                    style="@style/txt_13size_singline_nomal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="angle萍儿"
                    android:textColor="@color/color_333333" />

                <TextView
                    style="@style/txt_12size_nomal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/man"
                    android:gravity="center_vertical|right"
                    android:paddingRight="5dip"
                    android:text="24"
                    android:textColor="@android:color/white" />

                <TextView
                    style="@style/txt_12size_nomal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="o,o1km | 1分钟前"
                    android:textColor="@color/color_999999" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_car_tag"
                android:layout_width="60dip"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:scaleType="center"
                android:src="@drawable/car" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
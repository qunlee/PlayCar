<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/order_list_tab"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/blue_5b5184"
        android:orientation="vertical" >

        <Button
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:drawableLeft="@drawable/car_back_point"
            android:drawablePadding="5dp"
            android:onClick="onClick"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/group_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="创建群组"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/commit_btn"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:onClick="onClick"
            android:text="创建"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </RelativeLayout>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/car_head_update_icon"
        android:onClick="onClick" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/car_menu_border"
        android:hint="请输入群名字，最多十个字"
        android:padding="15dp"
        android:textColorHint="#cccccc"
        android:textSize="16sp" />

    <Button
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/car_menu_border"
        android:drawableRight="@drawable/car_menu_point"
        android:gravity="left"
        android:onClick="onClick"
        android:padding="15dp"
        android:text="群介绍"
        android:textColor="#333333"
        android:textSize="16sp" />

    <Button
        android:id="@+id/local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/car_menu_border"
        android:drawableRight="@drawable/car_menu_point"
        android:gravity="left"
        android:onClick="onClick"
        android:padding="15dp"
        android:text="所在地（城市，自动定位）"
        android:textColor="#333333"
        android:textSize="16sp" />

</LinearLayout>